<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <server>
            <id>ossrh</id>
            <username>${env._OSSRH_JIRA_USERNAME}</username>
            <password>${env._OSSRH_JIRA_PASSWORD_SECRET}</password>
        </server>
        <server>
            <id>docker.io</id>
            <username>${env._DOCKER_USERNAME}</username>
            <password>${env._DOCKER_PASSWORD_SECRET}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>ossrh</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <gpg.executable>gpg</gpg.executable>
                <gpg.keyname>${env._GPG_KEY_SECRET}</gpg.keyname>
                <gpg.passphrase>${env._GPG_PASSPHRASE_SECRET}</gpg.passphrase>
            </properties>
        </profile>
    </profiles>
</settings>